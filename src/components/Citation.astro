---
const { arabic, transliteration, translation, source, sourceLink } = Astro.props;
---

<blockquote
  style="border-left: 4px solid #ccc; padding-left: 1rem; margin: 1.5rem 0;"
>
  {
    arabic && (
      <p
        dir="rtl"
        style="text-align: right; line-height: 2.4em; font-size: 1.5rem; font-family: 'Amiri Quran', serif; margin-bottom: 0.5rem;"
      >
        {arabic}
      </p>
    )
  }
  <p style="font-style: italic; font-size: 0.95rem;">{transliteration}</p>
  <p style="font-style: italic; font-size: 0.95rem;">{translation}</p>
  <footer style="margin-top: 0.5rem; font-size: 0.75rem; color: #666;">
    <a href={sourceLink} target="_blank" rel="noopener noreferrer">â€” {source}</a>
  </footer>
</blockquote>
